while True:
    user_input = input("Enter an integer (type 'quit' to exit): ")

    if user_input.lower() == 'quit':
        break

    try:
        number = int(user_input)
        if number % 2 == 0:
            print(f"{number} is even.")
        else:
            print(f"{number} is odd.")
    except ValueError:
        print("Invalid input. Please enter a valid integer.")
